<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/sort_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_sort_name"
        android:onClick="sortByName" />
    <Button
        android:id="@+id/sort_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sortByDate"
        android:text="@string/button_sort_date"
        android:layout_toRightOf="@id/sort_name" />
    <ListView
        android:id="@+id/file_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:padding="10dp"
		android:layout_below="@id/sort_name" />

</RelativeLayout>
